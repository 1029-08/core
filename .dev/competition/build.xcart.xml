<?xml version="1.0" encoding="UTF-8"?>
<project name="xcart" default="deploy" basedir=".">

    <target name="clear">
        <delete dir="xcart" quiet="true" failonerror="false" />
    </target>

    <target name="deploy">
		<cvs cvsRoot="${cvsRoot}" package="eshop" tag="xcart_4_4_1" dest="xcart" failonerror="true" />
		<move todir="xcart">
			<fileset dir="xcart/eshop" />
		</move>

		<copy file="deploy/xcart/config.local.php" todir="xcart" />
        <copy file="deploy/xcart/auth.sh" todir="xcart/sql" />

		<chmod file="xcart/sql/demo.sh" perm="755" />
        <chmod file="xcart/sql/auth.sh" perm="755" />

		<exec executable="xcart/sql/demo.sh" failonerror="true" />

    </target>

</project>
