<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Padawan Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
The Padawan Ruleset contains a collection of rules taken from Padawan.
    </description>

    <rule name="EmptyTry"
          since="0.2.7"
          message="Avoid empty try{} statements"
          class="PHP_PMD_Rule_Padawan_EmptyTry">
        <description>
TBD.
        </description>
        <priority>3</priority>
        <example>
            <![CDATA[
class Something {
    public static function main( array $as ) {
        try{ // VIOLATION - empty
        } catch (Exception $ex) {
            // do something
        } 
    }
}
            ]]>
        </example>
    </rule>
    
    <rule name="EmptyCatch"
          since="0.2.7"
          message="Avoid empty catch() statements"
          class="PHP_PMD_Rule_Padawan_EmptyTry">
        <description>
TBD.
        </description>
        <priority>3</priority>
        <example>
            <![CDATA[
class Something {
    public static function main( array $as ) {
        try{ 
            $a = $a + 1;
        } catch (Exception $ex) {
            // VIOLATION -empty
        } 
    }
}
            ]]>
        </example>
    </rule>

    <rule name="IncludeRequires"
          since="0.2.7"
          message="Avoid include/require/etc with Superglobals"
          class="PHP_PMD_Rule_Padawan_IncludeRequires">
        <description>
TBD.
        </description>
        <priority>3</priority>
        <example>
            <![CDATA[
class Something {
}
            ]]>
        </example>
    </rule>

    <rule name="IncludeFunctions"
          since="0.2.7"
          message="Avoid file/readfile/etc with Superglobals"
          class="PHP_PMD_Rule_Padawan_IncludeFunctions">
        <description>
TBD.
        </description>
        <priority>3</priority>
        <example>
            <![CDATA[
class Something {
}
            ]]>
        </example>
    </rule>
</ruleset>