# vim: set ts=2 sw=2 sts=2 et:
#
# Images-specified Apache options
#

Options -Indexes

<IfModule mod_expires.c>
  ExpiresActive Off

  # Cache all files for 2 weeks after access (A).
  ExpiresDefault A1209600
</IfModule>

<Files ~ "(\.jpg|\.gif|\.png|\.bmp|\.tiff|\.swf|\.jpeg)">
  Allow from all
</Files>

Deny from all
